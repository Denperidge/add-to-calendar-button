{
  "name": "add-to-calendar-button",
  "version": "1.8.11",
  "engines": {
    "node": ">=12.22.0"
  },
  "description": "A convenient JavaScript snippet, which lets you create beautiful buttons, where people can add events to their calendars.",
  "main": "npm_dist/cjs/index.js",
  "module": "npm_dist/mjs/index.js",
  "exports": {
    "./assets/css/": "./assets/css/",
    ".": {
      "import": "./npm_dist/mjs/index.js",
      "require": "./npm_dist/cjs/index.js"
    }
  },
  "types": "index.d.ts",
  "style": "assets/css/atcb.min.css",
  "jsdelivr": "./assets/js/atcb.min.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/jekuer/add-to-calendar-button.git"
  },
  "keywords": [
    "button",
    "microsoft",
    "light",
    "open-source",
    "apple",
    "google",
    "generator",
    "component",
    "simple",
    "vanilla-js",
    "free",
    "snippet",
    "outlook",
    "easy",
    "vanillajs",
    "add-to-calendar",
    "addevent",
    "add-to-calendar-button",
    "calendar"
  ],
  "author": {
    "name": "Jens Kuerschner",
    "url": "https://jenskuerschner.de/"
  },
  "license": "SEE LICENSE IN LICENSE.txt",
  "bugs": {
    "url": "https://github.com/jekuer/add-to-calendar-button/issues"
  },
  "homepage": "https://jekuer.github.io/add-to-calendar-button/",
  "scripts": {
    "release": "npx grunt version::$npm_config_r && npm install && npm run build",
    "stylelint": "npx stylelint assets/css/*.css",
    "stylelint:fix": "npm run stylelint -- --fix",
    "eslint": "npx eslint .",
    "eslint:fix": "npm run eslint -- --fix",
    "prettier": "npx prettier . --check",
    "prettier:fix": "npm run prettier -- --write",
    "format": "npm run eslint:fix && npm run prettier:fix && npm run stylelint:fix",
    "test": "node test/server-side-rendering.js",
    "build": "npx grunt"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.29.0",
    "@typescript-eslint/parser": "^5.29.0",
    "eslint": "^8.18.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-commonjs": "^1.0.2",
    "grunt": ">=1.5.3",
    "grunt-contrib-clean": "^2.0.0",
    "grunt-contrib-copy": "^1.0.0",
    "grunt-contrib-cssmin": "^4.0.0",
    "grunt-contrib-uglify": "^5.0.1",
    "grunt-version": "^3.0.0",
    "prettier": "2.7.1",
    "stylelint": "^14.9.1",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard": "^26.0.0"
  }
}
